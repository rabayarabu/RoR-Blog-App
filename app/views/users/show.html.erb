<h1>A given User detail with posts</h1>
<%= render 'shared/user', user:@user%>

<div class="user-card">
 <h3>Bio</h3>
 <p><%= @user.bio %><p>
</div>

<div class="user_post">
   <% @user.recent_posts.each do |post| %>

      <%= render 'shared/post', post:post %>
   <%end%>

</div>
<div class="button_holder">
<button>
<%= link_to 'See all posts', user_posts_path(@user)%>
</button>
</div>